<div class="tile is-ancestor">
	<% invites.each do |invite| %>
	<div class=”tile is-parent”>
		<div class="card">
			<div class="card-image">
				<%= link_to invite_path(invite) do %>
					<%= attachment_image_tag invite, :image, :fill, 283, 283, fallback: "no_image.jpg" %>
				<% end %>
			</div>
			<div class="card-content">
				<span class="subtitle is-6">募集タイトル</span>
				<p><%= invite.title %></p>
				<span class="subtitle is-6">猫情報</span>
				<p><%= invite.sex %> ／ <%= invite.age %> ／ <%= invite.type %></p>
				<span class="subtitle is-6">掲載者</span>
				<p><%= link_to invite.user.handle_name, user_path(invite.user.id) %></p>
				<span class="subtitle is-6">掲載日</span>
				<p><%= invite.created_at.strftime('%Y/%m/%d') %></p>
			</div>
		</div>
	</div>
	<% end %>
</div>
