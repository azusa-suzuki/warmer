<h1 class="title is-1 has-text-primary">通知一覧</h1>

<%= link_to "　通知を削除する", notification_path(current_user.id), method: :delete, data:{confirm: "本当に消しますか？"}, class: "fas fa-trash" %>
<hr>

<% if @notifications.exists? %>
  <%= render @notifications %>
<% else %>
  <p>通知はありません</p>
<% end %>

<%= paginate @notifications, class: "paginate" %>